@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">로그인 소셜연동</h1>
</div>
<div class="jumbotron">

@if (User?.Identity?.IsAuthenticated ?? false)
{
   <h1>Welcome, @User.Identity.Name</h1>
   <p>
   @foreach (var claim in Context.User.Claims)
   {
        <div><code>@claim.Type</code>: <strong>@claim.Value</strong></div>
   }
   </p>
   <a class="btn btn-lg btn-danger" href="/signout?returnUrl=%2F">Sign out</a>
}
else
{
<div class="text-center">
    <p><a href="javascript:goGoogle();">구글 연동</a></p>
    <p><a href="javascript:goKakaotalk();">카카오 연동</a></p>
    <p><a href="javascript:goNaver();">네이버 연동</a></p>
</div>
<form name="frmGoogle" id="frmGoogle" method="post" action="https://tripboxaccounts.azurewebsites.net/Account">
    <input type="hidden" name="siteid" id="siteid" value="266" />
    <input type="hidden" name="authenticationtype" id="authenticationtype" value="304001" />
    <input type="hidden" name="callbackurl" id="callbackurl" value="https://tripboxpartners.azurewebsites.net/mobile/user/login" />
    <input type="hidden" name="callbackapiurl" id="callbackapiurl" value="https://tripboxwidgetapi.azurewebsites.net/Token/Token_OAuth" />
</form>
<form name="frmNaver" id="frmNaver" method="post" action="https://tripboxaccounts.azurewebsites.net/Account">
    <input type="hidden" name="siteid" id="siteid" value="266" />
    <input type="hidden" name="authenticationtype" id="authenticationtype" value="304002" />
    <input type="hidden" name="callbackurl" id="callbackurl" value="https://tripboxpartners.azurewebsites.net/mobile/user/login" />
    <input type="hidden" name="callbackapiurl" id="callbackapiurl" value="https://tripboxwidgetapi.azurewebsites.net/Token/Token_OAuth" />
</form>
<form name="frmKakaotalk" id="frmKakaotalk" method="post" action="https://tripboxaccounts.azurewebsites.net/Account">
    <input type="hidden" name="siteid" id="siteid" value="266" />
    <input type="hidden" name="authenticationtype" id="authenticationtype" value="304003" />
    <input type="hidden" name="callbackurl" id="callbackurl" value="https://tripboxpartners.azurewebsites.net/mobile/user/login" />
    <input type="hidden" name="callbackapiurl" id="callbackapiurl" value="https://tripboxwidgetapi.azurewebsites.net/Token/Token_OAuth" />
</form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
function goGoogle() {
    $('#frmGoogle').submit();
}
function goKakaotalk() {
    $('#frmKakaotalk').submit();
}
function goNaver() {
    $('#frmNaver').submit();
}
</script>
}

</div>



